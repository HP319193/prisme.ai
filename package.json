{
  "name": "@prisme.ai/pyramide",
  "version": "1.0.0",
  "description": "Prisme.ai event driven automation platform",
  "workspaces": [
    "./services/*",
    "./packages/*"
  ],
  "scripts": {
    "start": "docker-compose -f docker-compose.dev.yml up",
    "stop": "docker-compose -f docker-compose.dev.yml down",
    "postinstall": "(command -v docker-compose > /dev/null && npm run build:docker:deps) || exit 0",
    "clean": "npx rimraf packages/**/dist",
    "build:packages": "npx rollup -c",
    "build:console": "npm run build --prefix services/console",
    "build:workspaces": "npm run build --prefix services/workspaces",
    "build:gateway": "npm run build --prefix services/api-gateway",
    "build:runtime": "npm run build --prefix services/runtime",
    "build:events": "npm run build --prefix services/events",
    "build:validation:instruction": "ts-node scripts/buildInstructions.ts specifications/swagger.yml packages/validation/instructions.json",
    "build:validation": "npm run build --prefix ./packages/validation && npm run build:validation:instruction",
    "build:types": "npx dtsgen --out ./packages/types/index.d.ts ./specifications/swagger.yml",
    "build:docker:deps": "docker build . -f dependencies.dockerfile -t registry.gitlab.com/prisme.ai/prisme.ai/prisme.ai-dependencies --cache-from registry.gitlab.com/prisme.ai/prisme.ai/prisme.ai-dependencies",
    "install": "[ \"$BUILD_PACKAGES\" = \"0\" ] || npm run build:packages",
    "dev:console": "npm run dev --prefix services/console",
    "dev:workspaces": "npm run dev --prefix services/workspaces",
    "dev:gateway": "npm run dev --prefix services/api-gateway",
    "dev:runtime": "npm run dev --prefix services/runtime",
    "dev:events": "npm run dev --prefix services/events",
    "dev:docs": "npm run dev --prefix docs",
    "publish:types": "npm publish --workspace=@prisme.ai/types --access=public",
    "publish:broker": "npm publish --workspace=@prisme.ai/broker --access=public",
    "test": "jest --collect-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/gogowego-devsecops/dev/pyramide.git"
  },
  "author": "Prisme.ai",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/gogowego-devsecops/dev/pyramide/issues"
  },
  "homepage": "https://gitlab.com/gogowego-devsecops/dev/pyramide#readme",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.15.0",
    "@dtsgenerator/replace-namespace": "^1.5.1",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/ace": "^0.0.47",
    "@types/jest": "^27.0.2",
    "@types/js-cookie": "^3.0.1",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^17.0.24",
    "@types/react-native": "^0.66.2",
    "@types/react-test-renderer": "^17.0.1",
    "autoprefixer": "^10.3.5",
    "babel-jest": "^27.3.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-react-native-web": "^0.17.5",
    "dtsgenerator": "^3.13.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.2",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-typescript2": "^0.30.0",
    "sass": "^1.42.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.1"
  }
}
