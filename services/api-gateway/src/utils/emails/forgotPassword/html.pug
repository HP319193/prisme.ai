head
  meta(name='viewport' content='width=device-width')
  meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
  title= `${t("Prisme.ai - Password reset")}`
  style(type='text/css').
    img {
    max-width: 100%;
    }
    * {
    box-sizing: border-box;
    }
    body {
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: none;
    width: 100% !important;
    height: 100%;
    line-height: 1.6em;
    }
    body {
    background-color: #ecf0f5;
    }
    @media only screen and (max-width: 640px) {
    body {
    padding: 0 !important;
    }
    h1 {
    font-weight: 800 !important;
    margin: 20px 0 5px !important;
    }
    h2 {
    font-weight: 800 !important;
    margin: 20px 0 5px !important;
    }
    h3 {
    font-weight: 800 !important;
    margin: 20px 0 5px !important;
    }
    h4 {
    font-weight: 800 !important;
    margin: 20px 0 5px !important;
    }
    h1 {
    font-size: 22px !important;
    }
    h2 {
    font-size: 18px !important;
    }
    h3 {
    font-size: 16px !important;
    }
    .container {
    padding: 0 !important;
    width: 100% !important;
    }
    .content {
    padding: 0 !important;
    }
    .content-wrap {
    padding: 10px !important;
    }
    .invoice {
    width: 100% !important;
    }
    }

table.body-wrap(style='width: 100%; background-color: #ecf0f5; margin: 0;' bgcolor='#ecf0f5')
  tr(style='margin: 0;')
    td(style='vertical-align: top; margin: 0;' valign='top')
    td.container(width='600' style='vertical-align: top; display: block !important; max-width: 600px !important; clear: both !important; margin: 0 auto;' valign='top')
      .content(style='max-width: 600px; display: block; margin: 0 auto; padding: 20px;')
        table.main(width='100%' cellpadding='0' cellspacing='0' style='border-radius: 3px; background-color: #fff; margin: 0; border: 1px solid #e9e9e9;' bgcolor='#fff')
          tr(style='margin: 0;')
            td.alert.alert-warning(style='font-size: 16px; vertical-align: top; color: #fff; font-weight: 700; text-align: center; border-radius: 3px 3px 0 0; background-color: #0A1D3B; margin: 0; padding: 20px;' align='center' bgcolor='#FF9F00' valign='top')
              = `${t("Let's change your password")} ${name}`
          tr(style='margin: 0;')
            td.content-wrap(style='vertical-align: top; margin: 0; padding: 20px;' valign='top')
              table(width='100%' cellpadding='0' cellspacing='0' style='margin: 0;')
                tr(style='margin: 0;')
                  td.content-block(style='vertical-align: top; margin: 0; padding: 0 0 20px;' valign='top')
                    p= `${t("Hi")} ${name},`
                    p= t("It seems that your forgot your password, no worries, it happens!")
                    p= t("Click here to change your password")
                tr(style='margin: 0;')
                  td.content-block(style='vertical-align: top; margin: 0; padding: 0 0 20px;' valign='top')
                    a.btn-primary(href=`${resetLink}` style='color: #FFF; text-decoration: none; line-height: 2em; font-weight: bold; text-align: center; cursor: pointer; display: inline-block; border-radius: 5px; background-color: #015DFF; margin: 0; border-color: #015DFF; border-style: solid; border-width: 10px 20px;')= t("Reset my password")
                tr(style='margin: 0;')
                  td.content-block(style='vertical-align: top; margin: 0; padding: 0 0 20px;' valign='top')
                    p= t("If you did not ask for a password reset, please disregard this mail and try securing your account by changing the password.")
                    p= t("If the issue persist, please contact us at : support@prisme.ai.")
                    p= t("Prisme.ai Team")
        .footer(style='width: 100%; clear: both; color: #999; margin: 0; padding: 20px;')
    td(style='vertical-align: top; margin: 0;' valign='top')