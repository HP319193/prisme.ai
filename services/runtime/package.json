{
  "name": "@prisme.ai/runtime",
  "description": "Official Prisme.ai Runtime microservice.",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build": "npm run build:nearley && tsc -p tsconfig.json",
    "build:nearley": "nearleyc deps/condition-eval/grammar.ne -o deps/condition-eval/src/grammar.js",
    "clean": "rm -rf dist build",
    "ts-node": "ts-node",
    "dev": "ts-node-dev -r dotenv/config --inspect=9230 --transpile-only --respawn ./src/app.ts",
    "start": "node --abort-on-uncaught-exception dist/index.js"
  },
  "dependencies": {
    "@prisme.ai/broker": "^0.1.2",
    "@prisme.ai/permissions": "^1.0.0",
    "@prisme.ai/types": "^1.0.7",
    "aws-sdk": "^2.1048.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.4",
    "heapdump": "^0.3.15",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "lru-cache": "^7.10.1",
    "moo": "^0.5.1",
    "multer": "^1.4.4",
    "nearley": "^2.20.1",
    "node-fetch": "^2.6.6",
    "on-finished": "^2.3.0",
    "pino": "^7.2.0",
    "prom-client": "^14.0.1",
    "redis": "^4.0.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/heapdump": "^0.3.1",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.178",
    "@types/nearley": "^2.11.2",
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^3.0.3",
    "@types/on-finished": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4",
    "wait-for-expect": "^3.0.2"
  }
}
